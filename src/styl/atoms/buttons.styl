//
// 1. Button
// --------------------------------------------------

.btn
    reset(form)
    background $brand-alternate
    cursor pointer
    color #fff
    display inline-block
    padding $space $space-lg
    position relative
    overflow hidden

    &:before
        background-color $brand-primary
        content ''
        position absolute 0
        transform translateY(100%)
        transition transform .2s ease-in-quad

    &:after
        content attr(aria-label)
        opacity 0
        padding $space $space-lg
        transition opacity 0s .1s
        position absolute 0

    &:hover
    &:focus
        &:before
            transform translateY(0)

        &:after
            opacity 100
            transition-delay 0




//
// 2. Link
// --------------------------------------------------

.btn-link
    font(p3, bold, secondary, uppercase)
    color $text-color
    display inline-block

    &:hover
    &:focus
        text-decoration underline

.github-ribbon
  position absolute
  top 0
  right 0
  border 0

.menu
    float right
    ul
        list-style none
        li
            display inline-block
            margin-right 50px
